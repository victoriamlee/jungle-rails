<h1>Login</h1>

<%= form_tag '/login' do %>

<p class="login">
  <span class="input"> Email: <br> <%= text_field_tag :email %></span>
  <span class="input"> Password: <br> <%= password_field_tag :password %></span>
  <span class="input"><%= submit_tag "Login", :class => "submit-button" %></span>
</p>

<% end %>